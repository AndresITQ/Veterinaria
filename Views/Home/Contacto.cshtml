@{
    ViewData["Tittle"] = "Contacto";

}
<h1>FORMULARIO SIMPLE</h1>
<form asp-controller="Home" asp-action="Contacto">
    <div class="mb-3">
        <label for="nombre" class="form-label"> Nombre:(*)</label>
        <input type="text" class="form-control" id="nombre" name="nombre" placeholder="Escriba su nombre" required />
    </div>
    <div class="mb-3">
        <label for="email" class="form-label"> Email:(*)</label>
        <input type="email" class="form-control" id="email" name="email" placeholder="ejemplo@ejemplo.com" required />
    </div>
    <div class="mb-3">
        <label for="emnsaje" class="form-label">Mensaje</label>
        <textarea class="form-control" id="mensaje" name="mensaje" rows="3"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Enviar</button>
</form>